<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_order_inherit_sale_grant" model="ir.ui.view">
        <field name="name">sale.order.inherit.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='preview_sale_order']" position="before">
                    <button name="action_view_grants" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('state', '!=', 'sale')]}">
                        <span>Gants</span>
                    </button>
                </xpath>
            </field>
    </record>


</odoo>