<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="planning_slot_template_view_tree_inherit" model="ir.ui.view">
        <field name="name">planning.slot.template.inherit.tree</field>
        <field name="model">planning.slot.template</field>
        <field name="inherit_id" ref="planning.planning_slot_template_view_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="editable"></attribute>
            </xpath>
        </field>
    </record>

    <record id="planning.planning_action_shift_template" model="ir.actions.act_window">
        <field name="view_mode">tree,form</field>
    </record>

    <record id="planning_slot_template_view_form_inherit" model="ir.ui.view">
        <field name="name">planning.slot.template.inherit.form</field>
        <field name="model">planning.slot.template</field>
        <field name="inherit_id" ref="planning.planning_slot_template_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="do_generate" type="object" string="Generate"/>
                </header>
            </xpath>
            <xpath expr="//group" position="inside">
                <field name="line_ids">
                    <tree editable="bottom">
                        <field name="start_time" widget="float_time"/>
                        <field name="duration" widget="float_time"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>