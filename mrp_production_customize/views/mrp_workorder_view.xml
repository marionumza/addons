<!--         		<attribute name="attrs">{'invisible': 1}</attribute> -->
<!--         	</xpath> -->
        	
<!--         	<xpath expr="//div[@class='workorder_actions']/div[@class='o_workorder_bar_content o_workorder_bar_content_right']//button[@name='action_first_skipped_step']" position="attributes"> -->
<!--         		<attribute name="attrs">{'invisible': 1}</attribute> -->
<!--         	</xpath> -->
        	
        </field>
    </record>

</odoo>